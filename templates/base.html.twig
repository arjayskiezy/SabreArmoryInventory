<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/logo-head.png') }}" />

        {% block stylesheets %}
        {{
            encore_entry_link_tags("app")
        }}
        {% endblock %}
    </head>
    <body x-data="dashboard()">
        {% include './UserPage/Admin/alert/alert.html.twig' %} {% block body %}{%
        endblock %} {% block javascripts %}
        {{ encore_entry_script_tags("app") }}

        <!-- Optional: place Alpine modal directive here if needed -->
        <script>
            document.addEventListener("alpine:init", () => {
                Alpine.directive("modal", (el) => {
                    el.addEventListener("click", (e) => {
                        e.preventDefault();
                        loadModal(el.getAttribute("href"));
                    });
                });
            });
        </script>
        {% endblock %}
    </body>
</html>
