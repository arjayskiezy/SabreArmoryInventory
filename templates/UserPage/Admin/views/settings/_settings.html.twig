<section x-show="view === 'settings'">
                <h2 class="text-xl font-semibold mb-3">System Settings</h2>
                <div class="bg-white rounded shadow p-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="text-sm text-gray-600"
                                >Low ammo threshold</label
                            >
                            <input
                                type="number"
                                class="mt-1 px-3 py-2 border rounded w-full"
                                placeholder="e.g. 20"
                            />
                        </div>
                        <div>
                            <label class="text-sm text-gray-600"
                                >WebSocket URL</label
                            >
                            <input
                                type="text"
                                class="mt-1 px-3 py-2 border rounded w-full"
                                placeholder="wss://..."
                            />
                        </div>
                    </div>
                </div>
            </section>