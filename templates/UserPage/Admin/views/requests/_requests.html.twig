{% extends 'UserPage/Admin/index.html.twig' %} {% block title %}Armory
Requests{% endblock %} {% block admin_content %}
<div class="flex items-center justify-between mb-4">
    <div>
        <h2 class="text-xl font-semibold">Armory Requests</h2>
        <p class="text-sm text-gray-500">Approve, deny, or log issue</p>
    </div>
</div>

<div class="bg-white rounded-xl shadow overflow-hidden">
    <ul>
        <!-- Example request — replace with Twig loop -->
        <li class="p-4 flex justify-between items-start">
            <div>
                <div class="font-medium text-gray-800">
                    Request #R-00123 — Officer Jane Doe
                </div>
                <div class="text-xs text-gray-500">For: Training / M4A1</div>
                <div class="text-xs text-gray-500">Requested: 2025-09-20</div>
            </div>

            <div class="flex items-center gap-2">
                <button
                    @click="openModal('authorize', { reqId: 'R-00123' })"
                    class="bg-primary text-white text-sm font-medium px-4 py-1.5 rounded-lg shadow transition-transform transform hover:scale-105"
                >
                    Authorize
                </button>
                <button
                    @click="openModal('deny', { reqId: 'R-00123' })"
                    class="bg-secondary text-white text-sm font-medium px-4 py-1.5 rounded-lg shadow transition-transform transform hover:scale-105"
                >
                    Deny
                </button>
            </div>
        </li>
        <!-- Repeat for other requests -->
    </ul>
</div>

{% endblock %}
