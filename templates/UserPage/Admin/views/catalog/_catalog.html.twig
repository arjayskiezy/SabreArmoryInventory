{% extends 'UserPage/Admin/index.html.twig' %} {% block title %}Firearm &
Equipment Catalog{% endblock %} {% block admin_content %}
<div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-semibold">Firearm & Equipment Catalog</h2>
    <div class="flex items-center gap-2">
        <select x-model="filter.category" class="px-3 py-2 border rounded-xl border border-gray-200">
            <option value="">All Categories</option>
            <option value="rifle">Rifles</option>
            <option value="pistol">Pistols</option>
            <option value="sabre">Sabres</option>
            <option value="gear">Protective Gear</option>
        </select>
        <input
            x-model="filter.q"
            @input.debounce.300="searchCatalog"
            placeholder="Model / Serial #"
            class="px-3 py-2 border rounded-xl border border-gray-200"
        />

        {# Action buttons using your class style setup #} {% set buttons = [ {
        label: '+ Unit', route: 'app_unit_new' }, { label: '+ Stocks', route:
        'app_stocks_new' } ] %} {% for btn in buttons %}
        <button
            @click="loadModal('{{ path(btn.route) }}')"
            class="{% if btn.route == 'app_stocks_new' %} bg-secondary {% else %} bg-primary {% endif %} text-white text-sm font-medium px-4 py-2 rounded-lg shadow transition-transform transform hover:scale-105"
        >
            {{ btn.label }}
        </button>
        {% endfor %} {% if stocks is defined %}
        <button
            @click="loadModal('{{ path('app_stock_logs') }}')"
            class="bg-tertiary text-white text-sm font-medium px-4 py-2 rounded-lg shadow transition-transform transform hover:scale-105"
        >
            Stock Logs
        </button>
        {% endif %}
    </div>
</div>

<!-- Catalog table -->
<div class="bg-white rounded-xl shadow">
    <table class="min-w-full divide-y divide-gray-200 text-sm">
        <thead
            class="bg-gray-100 text-gray-700 uppercase text-xs tracking-wider sticky top-0 z-10"
        >
            <tr>
                <th class="px-4 py-3 text-left">Type</th>
                <th class="px-4 py-3 text-left">Model</th>
                <th class="px-4 py-3 text-left">Serial #</th>
                <th class="px-4 py-3 text-left">Condition</th>
                <th class="px-4 py-3 text-left">Location</th>
                <th class="px-4 py-3 text-left">Status</th>
                <th class="px-4 py-3 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Example row â€” replace with Twig loop -->
            <tr>
                <td class="px-4 py-3 text-left">Rifle</td>
                <td class="px-4 py-3 text-left">M4A1</td>
                <td class="px-4 py-3 text-left">M4-12345</td>
                <td class="px-4 py-3 text-left">Good</td>
                <td class="px-4 py-3 text-left">Armory A</td>
                <td class="px-4 py-3 text-left">
                    <span class="text-sm text-green-600">Available</span>
                </td>
                <td class="px-4 py-3 flex gap-2">
                    <button
                        @click="openModal('issue', { itemId: 'M4-12345' })"
                        class="bg-primary text-white text-xs font-medium px-3 py-1 rounded-lg shadow transition-transform transform hover:scale-105"
                    >
                        Issue
                    </button>
                    <button
                        @click="openModal('editItem', { itemId: 'M4-12345' })"
                        class="bg-secondary text-white text-xs font-medium px-3 py-1 rounded-lg shadow transition-transform transform hover:scale-105"
                    >
                        Edit
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div> {% endblock %}
