{% extends 'UserPage/Admin/index.html.twig' %} {% block title %}Issue / Return{%
endblock %} {% block admin_content %}
<div class="flex items-center justify-between mb-4">
    <div>
        <h2 class="text-xl font-semibold">Issue / Return</h2>
        <p class="text-sm text-gray-500">
            Record issuance, returns, and authorization logs
        </p>
    </div>
</div>

<div class="bg-white rounded-xl shadow p-6">
    <!-- Quick Issue Form -->
    <form
        @submit.prevent="submitIssue"
        class="grid grid-cols-1 md:grid-cols-3 gap-4"
    >
        <!-- Personnel -->
        <div>
            <label class="text-sm text-gray-600">Personnel (ID / Name)</label>
            <input
                x-model="issueForm.person"
                class="mt-1 px-3 py-2 rounded-xl w-full border border-gray-200"
                placeholder="Enter personnel ID or name"
                required
            />
        </div>

        <!-- Item -->
        <div>
            <label class="text-sm text-gray-600">Item Serial # / Model</label>
            <input
                x-model="issueForm.item"
                class="mt-1 px-3 py-2 rounded-xl w-full border border-gray-200"
                placeholder="e.g. M4-12345"
                required
            />
        </div>

        <!-- Authorization + Button -->
        <div class="flex items-end gap-3">
            <div class="flex-1">
                <label class="text-sm text-gray-600">Authorization</label>
                <select
                    x-model="issueForm.authorizer"
                    class="mt-1 px-3 py-2 border border-gray-200 rounded-xl w-full"
                >
                    <option value="">Select authorizing officer</option>
                    <option>Commander A</option>
                    <option>Commander B</option>
                </select>
            </div>
            <button
                type="submit"
                class="bg-primary text-white text-sm font-medium px-4 py-2 rounded-lg shadow transition-transform transform hover:scale-105"
            >
                Issue Item
            </button>
        </div>
    </form>

    <div class="mt-6 text-sm text-gray-500 leading-relaxed">
        <strong>Note:</strong> The authorization flow will create a record
        requiring confirmation from the authorizing officer. You can integrate
        real digital signature APIs or record a sign-off.
    </div>
</div>

{% endblock %}
