<div class="relative" x-data="{
        showNotifications: false,
        unreadNotifications: 2,
        notifications: [
            { id: 1, titles: 'New message received', time: '2m ago', level: 'Info' },
            { id: 2, titles: 'Server down', time: '10m ago', level: 'Critical' }
        ],
        toggleNotifications() { this.showNotifications = !this.showNotifications }
    }">

    <!-- Notification Button -->
    <button
        type="button"
        @click="toggleNotifications"
        class="p-2 rounded hover:bg-gray-100 relative transition"
        :aria-expanded="showNotifications"
        aria-label="Notifications"
    >
        <!-- Bell Icon -->
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-gray-700"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-5-5.917V5a2 2 0 10-4 0v.083A6.002 6.002 0 004 11v3.159c0 .538-.214 1.055-.595 1.436L2 17h5m5 0v1a3 3 0 11-6 0v-1m6 0H9"
            />
        </svg>

        <!-- Notification badge -->
        <span
            x-text="unreadNotifications"
            class="ml-1 text-xs text-white bg-red-600 rounded-full px-1 absolute top-0 right-0 transform translate-x-1/2 -translate-y-1/2"
            x-show="unreadNotifications > 0"
        ></span>
    </button>

    <!-- Notifications Dropdown -->
    <div
        x-show="showNotifications"
        x-transition
        x-cloak
        class="absolute right-0 mt-2 w-96 bg-white rounded shadow-lg overflow-hidden z-50"
    >
        <div class="p-3 border-b text-sm font-semibold">
            Notifications
        </div>
        <div class="max-h-64 overflow-y-auto scrollbar-thin">
            <template x-for="note in notifications" :key="note.id">
                <div class="p-3 hover:bg-gray-50 flex justify-between gap-3">
                    <div>
                        <div class="text-sm font-medium" x-text="note.titles"></div>
                        <div class="text-xs text-gray-500" x-text="note.time"></div>
                    </div>
                    <div class="text-xs font-semibold" x-text="note.level"></div>
                </div>
            </template>
            <div
                x-show="notifications.length === 0"
                class="p-3 text-sm text-gray-500"
            >
                No notifications
            </div>
        </div>
        <div class="p-2 text-center text-xs text-gray-500">
            Auto-updates via WebSocket
        </div>
    </div>
</div>