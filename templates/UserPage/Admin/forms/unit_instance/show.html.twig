<h1 class="text-2xl font-bold mb-6">Unit Instance Details</h1>

<div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <tbody class="divide-y divide-gray-200">

            <!-- ID -->
            <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    ID
                </th>
                <td class="px-6 py-3 text-sm text-gray-800">{{ unit_instance.id }}</td>
            </tr>

            <!-- Serial Number -->
            <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    Serial #
                </th>
                <td class="px-6 py-3 text-sm text-gray-800">{{ unit_instance.serialNumber }}</td>
            </tr>

            <!-- Weapon Type -->
            <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    Type
                </th>
                <td class="px-6 py-3 text-sm text-gray-800">
                    {{ unit_instance.weaponType ? unit_instance.weaponType.name : "No type" }}
                </td>
            </tr>

            <!-- Owner -->
            <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    Owner
                </th>
                <td class="px-6 py-3 text-sm text-gray-800">
                    {{ unit_instance.owner ? unit_instance.owner.fullname : "Not Assigned" }}
                </td>
            </tr>

            <!-- Purchased Date -->
            <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    Purchased Date
                </th>
                <td class="px-6 py-3 text-sm text-gray-800">
                    {{ unit_instance.purchasedDate ? unit_instance.purchasedDate|date('Y-m-d') : "Not Purchased" }}
                </td>
            </tr>

            <!-- Condition -->
            <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    Condition
                </th>
                <td class="px-6 py-3 text-sm">
                    <span class="
                        px-2 py-1 rounded-lg text-xs font-medium
                        {% if unit_instance.itemStatus.value == 'GOOD' %}
                            bg-green-100 text-green-700
                        {% elseif unit_instance.itemStatus.value == 'FAIR' %}
                            bg-yellow-100 text-yellow-700
                        {% else %}
                            bg-red-100 text-red-700
                        {% endif %}
                    ">
                        {{ unit_instance.itemStatus.value }}
                    </span>
                </td>
            </tr>

            <!-- Status -->
            <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    Status
                </th>
                <td class="px-6 py-3 text-sm">
                    <span class="
                        px-2 py-1 rounded-lg text-xs font-medium
                        {% if unit_instance.status.value == 'ACTIVE' %}
                            bg-green-100 text-green-700
                        {% else %}
                            bg-red-100 text-red-700
                        {% endif %}
                    ">
                        {{ unit_instance.status.value }}
                    </span>
                </td>
            </tr>

        </tbody>
    </table>
</div>

<div class="mt-6 flex items-center gap-3">
    {{ include("UserPage/Admin/forms/unit_instance/_edit_link.html.twig", { unit_instance: unit_instance }) }}
    {{ include("UserPage/Admin/forms/unit_instance/_delete_link.html.twig") }}
</div>
