<div
	x-data="{ open: false }" class="inline-block">

	<!-- Delete Button -->
	<button @click="open = true" class="p-2 text-red-600 hover:text-red-700 bg-transparent rounded-lg shadow-sm transition-transform transform hover:scale-105 inline-flex items-center justify-center" title="Delete Unit">
		<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
			<path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5-3h4m-4 0a1 1 0 00-1 1v1h6V5a1 1 0 00-1-1m-4 0h4"/>
		</svg>
	</button>

	<!-- Modal -->
	<div x-show="open" x-transition class="fixed inset-0 bg-black/40 backdrop-blur-sm flex items-center justify-center z-50">
		<div @click.away="open = false" class="bg-white rounded-lg shadow-lg max-w-sm w-300 p-6">
			<h2 class="text-lg font-semibold mb-4">Confirm Deletion</h2>
			<p class="mb-6 text-gray-600">
				Are you sure you want to delete
				<strong>{{ unit.name }}</strong>? This action cannot be undone.
			</p>

			<div class="flex justify-end space-x-3">
				<button @click="open = false" class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300">
					Cancel
				</button>

				<form method="post" action="{{ path('app_unit_delete', { id: unit.id }) }}">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ unit.id) }}">
					<button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
						Delete
					</button>
				</form>
			</div>
		</div>
	</div>
</div>
