<form
    method="post"
    action="{{ path('app_unit_delete', { id: unit.id }) }}"
    onsubmit="return confirm('Are you sure you want to delete this item?');"
    class="inline-block"
>
    <input
        type="hidden"
        name="_token"
        value="{{ csrf_token('delete' ~ unit.id) }}"
    />
    <button
        type="submit"
        class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-xs font-medium px-3 py-1 rounded-lg shadow inline-flex items-center justify-center"
        title="Delete"
    >
        Delete
    </button>
</form>
