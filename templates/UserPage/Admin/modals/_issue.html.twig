<div x-show="modal.name === 'issue'">
            <form @submit.prevent="confirmIssue">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    <div>
                        <label class="text-sm text-gray-600">Item Serial</label>
                        <input
                            x-model="modal.data.itemId"
                            class="mt-1 px-3 py-2 border rounded w-full"
                        />
                    </div>
                    <div>
                        <label class="text-sm text-gray-600">Personnel</label>
                        <input
                            x-model="modal.data.person"
                            class="mt-1 px-3 py-2 border rounded w-full"
                        />
                    </div>
                    <div>
                        <label class="text-sm text-gray-600">Authorizer</label>
                        <select
                            x-model="modal.data.authorizer"
                            class="mt-1 px-3 py-2 border rounded w-full"
                        >
                            <option value="">Select</option>
                            <option>Commander A</option>
                        </select>
                    </div>
                    <div>
                        <label class="text-sm text-gray-600">Notes</label>
                        <input
                            x-model="modal.data.notes"
                            class="mt-1 px-3 py-2 border rounded w-full"
                        />
                    </div>
                </div>

                <div class="mt-4 flex justify-end gap-2">
                    <button
                        type="button"
                        class="px-4 py-2 border rounded"
                        @click="closeModal()"
                    >
                        Cancel
                    </button>
                    <button
                        type="submit"
                        class="px-4 py-2 bg-accent text-white rounded"
                    >
                        Confirm Issue
                    </button>
                </div>
            </form>
        </div>