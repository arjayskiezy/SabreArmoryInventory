<header
    class="flex items-center justify-between px-4 md:px-8 py-4 bg-white shadow-md"
>
    <!-- Left section -->
    <div class="flex items-center gap-4">
        <!-- Mobile sidebar toggle -->
        <button
            type="button"
            class="md:hidden p-2 rounded hover:bg-gray-100 transition"
            @click="mobileSidebar = true"
            aria-label="Open sidebar"
        >
            <!-- Heroicons Menu -->
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-gray-700"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"
                />
            </svg>
        </button>

        <!-- Search -->
        <div class="relative">
            <input
                type="search"
                x-model="searchQuery"
                @input.debounce.300="performSearch"
                placeholder="Search by model, serial, category..."
                class="pl-10 pr-4 py-2 rounded-lg border border-gray-200 w-64 focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent"
            />
            <div
                class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 pointer-events-none"
            >
                <!-- Heroicons Magnifying Glass -->
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1110.5 3a7.5 7.5 0 016.15 13.65z"
                    />
                </svg>
            </div>
        </div>

        <!-- Quick stats (desktop only) -->
        <div class="hidden md:flex gap-3 ml-6">
            <div class="px-3 py-2 bg-gray-100 rounded-2xl shadow text-sm">
                <div class="text-xs text-gray-500">Total Weapons</div>
                <div class="font-semibold text-gray-800">1,234</div>
            </div>
            <div class="px-3 py-2 bg-gray-100 rounded-2xl shadow text-sm">
                <div class="text-xs text-gray-500">Checked Out</div>
                <div class="font-semibold text-gray-800">42</div>
            </div>
            <div class="px-3 py-2 bg-gray-100 rounded-2xl shadow text-sm">
                <div class="text-xs text-gray-500">Pending Requests</div>
                <div class="font-semibold text-gray-800">7</div>
            </div>
        </div>
    </div>

    <!-- Right section -->
    <div class="flex items-center gap-3">
        <!-- Action buttons -->
        <button
            type="button"
            class="px-4 py-2 rounded-2xl bg-accent text-white hover:bg-accent-dark transition"
            @click="openModal('newRequest')"
        >
            New Request
        </button>
        <button
            type="button"
            class="px-4 py-2 rounded-2xl border hover:bg-gray-50 transition"
            @click="openModal('issue')"
        >
            Issue / Return
        </button>
        <!-- User menu -->
        {% include 'UserPage/Admin/_user_menu.html.twig' %}
        <!-- Notifications -->
        {% include 'UserPage/Admin/_notifications.html.twig' %}
    </div>
</header>
