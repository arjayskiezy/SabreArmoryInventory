{% extends 'base.html.twig' %}

{% block title %}Unit{% endblock %}

{% block body %}
    <h1>Unit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ unit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ unit.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ unit.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ unit.price }}</td>
            </tr>
            <tr>
                <th>Image_path</th>
                <td>{{ unit.imagePath }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ unit.createdAt ? unit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ unit.updatedAt ? unit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_unit_index') }}">back to list</a>

    <a href="{{ path('app_unit_edit', {'id': unit.id}) }}">edit</a>

    {{ include('unit/_delete_form.html.twig') }}
{% endblock %}
