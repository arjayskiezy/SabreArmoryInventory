<div
	x-data="{
		        flashOpen: false,
		        flashMessage: '',
		        flashType: 'info',
		        colors: {
		            success: {
		                icon: '✓',
		                header: 'Success',
		                bg: 'bg-green-600',
		                btn: 'bg-green-700 hover:bg-green-800'
		            },
		            error: {
		                icon: '✕',
		                header: 'Error',
		                bg: 'bg-red-600',
		                btn: 'bg-red-700 hover:bg-red-800'
		            },
		            warning: {
		                icon: '⚠',
		                header: 'Warning',
		                bg: 'bg-yellow-500',
		                btn: 'bg-yellow-600 hover:bg-yellow-700'
		            },
		            info: {
		                icon: 'ℹ',
		                header: 'Notice',
		                bg: 'bg-blue-600',
		                btn: 'bg-blue-700 hover:bg-blue-800'
		            }
		        }
		    }" x-init="
		        {% for type, messages in app.flashes %}
		            {% for message in messages %}
		                flashMessage = '{{ message|e('js') }}';
		                flashType = '{{ type }}';
		                flashOpen = true;
		            {% endfor %}
		        {% endfor %}
		    ">
	<div
		x-show="flashOpen" class="fixed inset-0 bg-black/40 backdrop-blur-sm flex items-center justify-center z-50" x-transition.opacity>
		<div
			class="bg-white rounded-lg p-6 shadow-xl w-96" x-transition.scale>
			<div class="flex items-center gap-3 mb-4">
				<div :class="colors[flashType]?.bg" class="text-white w-10 h-10 rounded-full flex items-center justify-center text-2xl">
					<span x-text="colors[flashType]?.icon"></span>
				</div>
				<h2 class="text-lg font-bold" x-text="colors[flashType]?.header"></h2>
			</div>

			<p class="mb-6 text-gray-700" x-text="flashMessage"></p>

			<div class="flex justify-end">
				<button @click="flashOpen = false" class="px-4 py-2 text-white rounded" :class="colors[flashType]?.btn">
					Close
				</button>
			</div>
		</div>
	</div>
</div>
